{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false, // Changed to catch library type issues
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "ui-library": [
        "./ui-library/src"
      ]
    },
    "types": [
      "node", // For Node.js globals
      "three",
      "@react-three/fiber", // Explicitly include Fiber types
      "@react-three/drei" // Explicitly include Drei types
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "ui-library/**/*.ts",
    "ui-library/**/*.tsx",
    "src/global.d.ts",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
